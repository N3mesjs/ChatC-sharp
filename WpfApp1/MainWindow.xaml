<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Height="600"
        Width="920"
        Title="Real Time Chat">
    <Grid Background="#323233">
        <Border CornerRadius="10" 
        Background="#1e1e1f" 
        BorderBrush="Gray" 
        BorderThickness="0"
        Height="35" 
        Margin="230,0,70,10" 
        VerticalAlignment="Bottom" 
        HorizontalAlignment="Stretch">
            <Grid >
                <!-- Placeholder Text -->
                <TextBlock Text="Scrivi un messaggio ..." 
                   Foreground="Gray" 
                   VerticalAlignment="Center" 
                   Padding="10,0,10,0" 
                   FontSize="14" 
                   IsHitTestVisible="False" 
                   x:Name="PlaceholderText"
                   Visibility="Visible"
                   Margin="5,0,0,0"/>

                <!-- TextBox -->
                <TextBox Background="Transparent"
                 Foreground="White"
                 BorderThickness="0"
                 VerticalContentAlignment="Center"
                 Padding="10,0,10,0"
                 FontSize="14" 
                 HorizontalAlignment="Stretch"
                 TextChanged="TextBox_TextChanged"
                 KeyDown="ChatTextBox_KeyDown"
                 x:Name="ChatTextBox"/>
            </Grid>
        </Border>
        <Border Background="#1e1e1f" 
        BorderThickness="1" 
        Margin="10,10,0,10" 
        Width="200"  
        HorizontalAlignment="Left" 
        VerticalAlignment="Stretch" 
        CornerRadius="10">
            <Label Content="Lista Chat" 
           Foreground="White" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Top" 
           RenderTransformOrigin="1.688,0.735" 
           Margin="0,9,0,0"/>
        </Border>

        <ScrollViewer x:Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto" Margin="230,10,70,80">
            <ItemsControl x:Name="MessagesContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1e1e1f" 
                        CornerRadius="5" 
                        Margin="5" 
                        Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Author}" 
                                   Foreground="Gray" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Body}" 
                                   Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <ScrollViewer x:Name="ChatListScrollViewer" VerticalScrollBarVisibility="Auto" Margin="20,60,720,20">
            <ItemsControl x:Name="ChatContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1e1e1f" 
                CornerRadius="5" 
                Margin="5" 
                Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Author}" 
                           Foreground="Gray" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Body}" 
                           Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>



    </Grid>
</Window>
