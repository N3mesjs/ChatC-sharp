<Window x:Class="WpfApp1.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUp" Height="400" Width="400" ResizeMode="NoResize">
    <Grid Background="#323233">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Per il titolo -->
            <RowDefinition Height="Auto"/>
            <!-- Per il primo campo -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Per il secondo campo -->
            <RowDefinition Height="*"/>
            <!-- Spazio rimanente -->
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <Label Content="SignUp Page" 
               Foreground="White" 
               HorizontalAlignment="Center" 
               FontSize="24" 
               FontWeight="Bold"
               Grid.Row="0" 
               Margin="0,20,0,20"/>

        <!-- Campo Username -->
        <StackPanel Grid.Row="1" Margin="0,0,0,0">
            <Label Content="Username" 
                   FontWeight="Bold" 
                   FontSize="16" 
                   Foreground="White" 
                   Margin="60,0,0,5"/>
            <Border CornerRadius="10" 
                    Background="#1e1e1f" 
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Height="35"
                    Margin="60,0,60,0">
                <TextBox x:Name="userName" 
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         Padding="10,0"/>
            </Border>
        </StackPanel>

        <!-- Campo Password -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Label Content="Password" 
                   FontWeight="Bold" 
                   FontSize="16" 
                   Foreground="White" 
                   Margin="60,0,0,5"/>
            <Border CornerRadius="10" 
                    Background="#1e1e1f" 
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Height="35"
                    Margin="60,0,60,0">
                <PasswordBox x:Name="passWord" 
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         Padding="10,0"/>
            </Border>
        </StackPanel>
        <Border CornerRadius="10" 
                Background="#3e02bf" 
                BorderBrush="Transparent"
                BorderThickness="0"
                Height="35"
                Margin="150,60,150,0"
                Grid.Row="3">
            <Button x:Name="sendForm"
				    Background="Transparent" 
                    Content="Invia" 
                    FontSize="20" 
                    FontWeight="Bold" 
                    Foreground="White"
                    BorderThickness="0" Click="SendForm_Click"/>
        </Border>
    </Grid>
</Window>
